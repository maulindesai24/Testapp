<% content_for :title, "Edit Profile - TestApp" %>

<h4 class="fw-bold py-3 mb-4">
  <span class="text-muted fw-light">Account / Profile /</span> Edit
</h4>

<div class="row">
  <div class="col-xl">
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Edit Profile</h5>
        <%= link_to profile_path, class: "btn btn-sm btn-label-secondary" do %>
          <i class="bx bx-arrow-back me-1"></i> Back to Profile
        <% end %>
      </div>
      <div class="card-body">
        <!-- Flash Messages -->
        <% if flash[:alert] %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= flash[:alert] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>
        <% if flash[:notice] %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= flash[:notice] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>

        <%= form_with model: @user, url: profile_path, method: :patch, multipart: true, class: "mb-3" do |f| %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <h6><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h6>
              <ul class="mb-0">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :firstname, class: "form-label" %>
              <%= f.text_field :firstname, class: "form-control", placeholder: "Enter your first name" %>
            </div>
            <div class="col-md-6 mb-3">
              <%= f.label :lastname, class: "form-label" %>
              <%= f.text_field :lastname, class: "form-control", placeholder: "Enter your last name" %>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :avatar, "Profile Picture", class: "form-label" %>
            <div class="d-flex align-items-center mb-2">
              <% if @user.avatar.attached? %>
                <div class="avatar me-3">
                  <%= image_tag @user.avatar, class: "avatar-initial rounded-circle", style: "width: 60px; height: 60px; object-fit: cover;" %>
                </div>
              <% else %>
                <div class="avatar me-3">
                  <span class="avatar-initial rounded-circle bg-label-primary" style="width: 60px; height: 60px; display: inline-flex; align-items: center; justify-content: center;">
                    <%= @user.name.first.upcase %>
                  </span>
                </div>
              <% end %>
              <div>
                <%= f.file_field :avatar, class: "form-control", accept: "image/*" %>
                <small class="text-muted">Accepted formats: JPG, PNG, GIF. Max size: 5MB</small>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :bio, "Bio", class: "form-label" %>
            <%= f.text_area :bio, class: "form-control", rows: 4, placeholder: "Tell us about yourself..." %>
          </div>
             
          <div class="mb-3 col-md-6">
            <%= f.label :phone, "Phone Number", class: "form-label" %>
            <%= f.text_field :phone, class: "form-control", placeholder: "Enter your phone number" %>
          </div>

          <div class="mb-3 col-md-6">
            <%= f.label :address, "Address", class: "form-label" %>
            <%= f.text_field :address, class: "form-control", placeholder: "Enter your address" %>
          </div>

          <div class="mb-3 col-md-6">
            <%= f.label :country, "Country", class: "form-label" %>
            <%= f.select :country, options_for_select(@countries, @user.country), {}, { class: "form-select" } %>
          </div>

          <div class="mt-4">
            <%= f.submit "Update Profile", class: "btn btn-primary me-2" %>
            <%= link_to "Cancel", profile_path, class: "btn btn-label-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
