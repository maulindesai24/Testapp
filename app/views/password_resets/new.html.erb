<% content_for :title, "Forgot Password - TestApp" %>

<!-- Forgot Password Card -->
<div class="card">
  <div class="card-body">
    <!-- Logo -->
    <div class="app-brand justify-content-center mb-4">
      <span class="app-brand-text demo text-body fw-bolder">TestApp</span>
    </div>

    <h4 class="mb-2">Forgot Password? ðŸ”’</h4>
    <p class="mb-4">Enter your email and we'll send you instructions to reset your password</p>

    <!-- Flash Messages -->
    <% if flash[:alert] %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= flash[:alert] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
    <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= flash[:notice] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <!-- RAILS FORM STARTS -->
    <%= form_with url: "/password_resets", method: :post, class: "mb-3" do |f| %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, 
          placeholder: "Enter your email", 
          class: "form-control", 
          autofocus: true,
          required: true %>
      </div>

      <div class="mb-3">
        <%= f.submit "Send Reset Link", class: "btn btn-primary d-grid w-100" %>
      </div>

    <% end %>
    <!-- RAILS FORM END -->

    <div class="text-center">
      <%= link_to "/login", class: "d-flex align-items-center justify-content-center" do %>
        <i class="bx bx-chevron-left scaleX-n1-rtl bx-sm"></i>
        Back to login
      <% end %>
    </div>
  </div>
</div>
<!-- /Forgot Password Card -->
