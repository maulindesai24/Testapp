<h4 class="fw-bold py-3 mb-4">
  <span class="text-muted fw-light">Admin /</span> Roles
</h4>

<div class="row mb-4">
  <div class="col-12">
    <%= link_to "New Role", new_admin_role_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <h5 class="card-header d-flex justify-content-between align-items-center">
        <span>All Roles</span>
        <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="collapse" data-bs-target="#filterCollapse">
          <i class="bx bx-filter-alt me-1"></i> Filter
        </button>
      </h5>
      <div class="collapse <%= 'show' if params[:search].present? || params[:user_count].present? %>" id="filterCollapse">
        <div class="card-body border-bottom">
          <%= form_with url: admin_roles_path, method: :get, class: "row g-3" do %>
            <div class="col-md-6">
              <label for="search" class="form-label">Search</label>
              <%= text_field_tag :search, params[:search], 
                  class: "form-control", 
                  placeholder: "Search by name or description" %>
              <small class="text-muted">Search by role name or description</small>
            </div>
            
            <div class="col-md-6">
              <label for="user_count" class="form-label">Users Count</label>
              <%= select_tag :user_count, 
                  options_for_select([
                    ["All", ""],
                    ["No users (0)", "0"],
                    ["1-5 users", "1-5"],
                    ["6-20 users", "6-20"],
                    ["20+ users", "20+"]
                  ], params[:user_count]),
                  class: "form-select" %>
            </div>
            
            <div class="col-12">
              <%= submit_tag "Apply Filter", class: "btn btn-primary btn-sm me-2" %>
              <%= link_to "Clear", admin_roles_path, class: "btn btn-outline-secondary btn-sm" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="table-responsive text-nowrap">
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Description</th>
              <th>Users Count</th>
              <th>Created At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody class="table-border-bottom-0">
            <% @roles.each do |role| %>
              <tr>
                <td><strong><%= role.id %></strong></td>
                <td>
                  <div class="d-flex align-items-center">
                    <div>
                      <strong><%= role.display_name %></strong>
                    </div>
                  </div>
                </td>
                <td>
                  <% if role.description.present? %>
                    <%= truncate(role.description, length: 50) %>
                  <% else %>
                    <span class="text-muted">No description</span>
                  <% end %>
                </td>
                <td>
                  <span class="badge bg-label-info me-1"><%= role.users.count %></span>
                </td>
                <td><%= role.created_at.strftime("%B %d, %Y") %></td>
                <td>
                  <div class="dropdown">
                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                      <i class="bx bx-dots-vertical-rounded"></i>
                    </button>
                    <div class="dropdown-menu">
                      <%= link_to admin_role_path(role), class: "dropdown-item" do %>
                        <i class="bx bx-show me-1"></i> View
                      <% end %>
                      <%= link_to edit_admin_role_path(role), class: "dropdown-item" do %>
                        <i class="bx bx-edit-alt me-1"></i> Edit
                      <% end %>
                      <div class="dropdown-divider"></div>
                      <%= link_to admin_role_path(role), 
                          method: :delete,
                          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete '#{role.display_name}'?" },
                          class: "dropdown-item text-danger" do %>
                        <i class="bx bx-trash me-1"></i> Delete
                      <% end %>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <% if @total_pages > 1 %>
        <div class="card-footer">
          <nav aria-label="Role pagination">
            <ul class="pagination justify-content-end mb-0">

              <!-- Previous -->
              <li class="page-item <%= 'disabled' if @page == 1 %>">
                <%= link_to "Previous", admin_roles_path(page: @page - 1, search: params[:search], user_count: params[:user_count]), class: "page-link" %>
              </li>

              <!-- Page Numbers -->
              <% (1..@total_pages).each do |p| %>
                <li class="page-item <%= 'active' if p == @page %>">
                  <%= link_to p, admin_roles_path(page: p, search: params[:search], user_count: params[:user_count]), class: "page-link" %>
                </li>
              <% end %>

              <!-- Next -->
              <li class="page-item <%= 'disabled' if @page == @total_pages %>">
                <%= link_to "Next", admin_roles_path(page: @page + 1, search: params[:search], user_count: params[:user_count]), class: "page-link" %>
              </li>
            </ul>
          </nav>
        </div>
      <% end %>
    </div>
  </div>
</div>
