<!-- Content -->
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h4 class="fw-bold py-3 mb-0">
        <span class="text-muted fw-light">Admin /</span> Dashboard
      </h4>
      <%= link_to admin_users_path, class: "btn btn-primary" do %>
        <i class="bx bx-user me-1"></i> Manage Users
      <% end %>
    </div>

    <!-- Statistics Cards -->
    <div class="row">
      <div class="col-lg-6 col-md-6 col-6 mb-4">
        <div class="card">
          <div class="card-body">
            <div class="card-title d-flex align-items-start justify-content-between">
              <div class="avatar flex-shrink-0">
                <span class="avatar-initial rounded bg-label-primary">
                  <i class="bx bx-user"></i>
                </span>
              </div>
            </div>
            <span class="fw-semibold d-block mb-1">Total Users</span>
            <h3 class="card-title mb-2"><%= User.count %></h3>
            <small class="text-success fw-semibold">
              <i class="bx bx-up-arrow-alt"></i> Active accounts
            </small>
          </div>
        </div>
      </div>
      <div class="col-lg-6 col-md-6 col-6 mb-4">
        <div class="card">
          <div class="card-body">
            <div class="card-title d-flex align-items-start justify-content-between">
              <div class="avatar flex-shrink-0">
                <span class="avatar-initial rounded bg-label-success">
                  <i class="bx bx-shield"></i>
                </span>
              </div>
            </div>
            <span class="fw-semibold d-block mb-1">Administrators</span>
            <h3 class="card-title mb-2"><%= User.where(is_admin: true).count %></h3>
            <small class="text-success fw-semibold">
              <i class="bx bx-check-circle"></i> Admin users
            </small>
          </div>
        </div>
      </div>
    </div>

    <!-- Welcome Card -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card">
          <div class="d-flex align-items-end row">
            <div class="col-sm-7">
              <div class="card-body">
                <h5 class="card-title text-primary">Welcome back, <%= current_user.name %>! ðŸ‘‹</h5>
                <p class="mb-4">
                  You are managing <span class="fw-bold"><%= User.count %></span> users in the system.
                  <% if User.where(is_admin: true).count > 1 %>
                    There are <span class="fw-bold"><%= User.where(is_admin: true).count %></span> administrators.
                  <% else %>
                    You are the only administrator.
                  <% end %>
                </p>
              </div>
            </div>
            <!--
            # <div class="col-sm-5 text-center text-sm-left">
            #   <div class="card-body pb-0 px-0 px-md-4">
            #     <div class="avatar flex-shrink-0 mx-auto" style="width: 120px; height: 120px;">
            #       <span class="avatar-initial rounded bg-label-primary" style="width: 120px; height: 120px; font-size: 3rem;">
            #         <i class="bx bx-user-circle"></i>
            #       </span>
            #     </div>
            #   </div>
            # </div>
            -->
          </div>
        </div>
      </div>
    </div>

    <!-- Users Table -->
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">User Management</h5>
            <%= link_to "View All Users", admin_users_path, class: "btn btn-sm btn-primary" %>
          </div>
          <div class="table-responsive text-nowrap">
            <table class="table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Username</th>
                  <th>Role</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody class="table-border-bottom-0">
                <% @users.each do |user| %>
                  <tr>
                    <td><strong><%= user.id %></strong></td>
                    <td>
                      <div class="d-flex align-items-center">
                        <div>
                          <strong><%= user.name %></strong>
                        </div>
                      </div>
                    </td>
                    <td><%= user.email %></td>
                    <td><%= user.username %></td>
                    <td>
                      <% if user.admin? %>
                        <span class="badge bg-label-success me-1">Admin</span>
                      <% else %>
                        <span class="badge bg-label-secondary me-1">User</span>
                      <% end %>
                    </td>
                    <td>
                      <div class="dropdown">
                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                          <i class="bx bx-dots-vertical-rounded"></i>
                        </button>
                        <div class="dropdown-menu">
                          <%= link_to admin_user_path(user), class: "dropdown-item" do %>
                            <i class="bx bx-show me-1"></i> View
                          <% end %>
                          <%= link_to edit_admin_user_path(user), class: "dropdown-item" do %>
                            <i class="bx bx-edit-alt me-1"></i> Edit
                          <% end %>
                          <% if user != current_user %>
                            <%= link_to toggle_admin_admin_user_path(user), method: :patch, class: "dropdown-item" do %>
                              <i class="bx bx-shield me-1"></i>
                              <%= user.admin? ? "Remove Admin" : "Make Admin" %>
                            <% end %>
                            <div class="dropdown-divider"></div>
                            <%= link_to admin_user_path(user), method: :delete, 
                                data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this user?" },
                                class: "dropdown-item text-danger" do %>
                              <i class="bx bx-trash me-1"></i> Delete
                            <% end %>
                          <% else %>
                            <span class="dropdown-item-text text-muted">Current User</span>
                          <% end %>
                        </div>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
</div>
<!-- / Content -->
