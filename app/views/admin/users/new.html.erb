<h4 class="fw-bold py-3 mb-4">
  <span class="text-muted fw-light">Admin / Users /</span> New User
</h4>

<div class="row">
  <div class="col-xl">
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Create New User</h5>
        <%= link_to "Back to Users", admin_users_path, class: "btn btn-sm btn-label-secondary" %>
      </div>
      <div class="card-body">
        <%= form_with model: [:admin, @user], class: "mb-3" do |f| %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <h6>Please fix the following errors:</h6>
              <ul class="mb-0">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :firstname, class: "form-label" %>
            <%= f.text_field :firstname, class: "form-control", placeholder: "Enter first name", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :lastname, class: "form-label" %>
            <%= f.text_field :lastname, class: "form-control", placeholder: "Enter last name", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :username, class: "form-label" %>
            <%= f.text_field :username, class: "form-control", placeholder: "Enter username", required: true %>
            <div class="form-text">Only letters and numbers allowed</div>
          </div>

          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "Enter email", required: true %>
          </div>

          <div class="mb-3 form-password-toggle">
            <%= f.label :password, class: "form-label" %>
            <div class="input-group input-group-merge">
              <%= f.password_field :password, class: "form-control", placeholder: "Enter password", required: true %>
              <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
            </div>
            <div class="form-text">Must be 8+ characters with uppercase, lowercase, number, and special character</div>
          </div>

          <div class="mb-3 form-password-toggle">
            <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
            <div class="input-group input-group-merge">
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password", required: true %>
              <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
            </div>
          </div>

          <div class="mb-3">
            <div class="form-check">
              <%= f.check_box :is_admin, class: "form-check-input" %>
              <%= f.label :is_admin, "Make this user an administrator", class: "form-check-label" %>
            </div>
          </div>

          <div class="d-flex gap-2">
            <%= f.submit "Create User", class: "btn btn-primary" %>
            <%= link_to "Cancel", admin_users_path, class: "btn btn-label-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
