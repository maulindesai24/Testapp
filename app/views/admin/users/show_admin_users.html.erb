<h4 class="fw-bold py-3 mb-4">
  <span class="text-muted fw-light">Admin /</span> Users
</h4>

<div class="row mb-4">
  <div class="col-12">
    <%= link_to "New User", new_admin_user_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <h5 class="card-header">Administrators Users</h5>
      <div class="table-responsive text-nowrap">
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Username</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody class="table-border-bottom-0">
            <% @users.each do |user| %>
              <tr>
                <td><strong><%= user.id %></strong></td>
                <td>
                  <div class="d-flex align-items-center">
                    <div>
                      <strong><%= user.name %></strong>
                    </div>
                  </div>
                </td>
                <td><%= user.email %></td>
                <td><%= user.username %></td>
                <td>
                  <div class="dropdown">
                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                      <i class="bx bx-dots-vertical-rounded"></i>
                    </button>
                    <div class="dropdown-menu">
                      <%= link_to admin_user_path(user), class: "dropdown-item" do %>
                        <i class="bx bx-show me-1"></i> View
                      <% end %>
                      <%= link_to edit_admin_user_path(user), class: "dropdown-item" do %>
                        <i class="bx bx-edit-alt me-1"></i> Edit
                      <% end %>
                      <% if user != current_user %>
                        <div class="dropdown-divider"></div>
                        <%= link_to admin_user_path(user), method: :delete, 
                            data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this user?" },
                            class: "dropdown-item text-danger" do %>
                          <i class="bx bx-trash me-1"></i> Delete
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
